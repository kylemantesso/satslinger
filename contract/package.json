    "license": "MIT",
    "private": false,
    "devDependencies": {
        "@parcel/transformer-sass": "2.12.0",
        "@types/bitcoinjs-lib": "^4.0.1",
        "@types/node": "^22.5.0",
        "@types/tiny-secp256k1": "^2.0.0",
        "ava": "^6.1.3",
        "bs58": "^6.0.0",
        "buffer": "^6.0.3",
        "crypto-browserify": "^3.12.0",
        "dotenv": "^16.4.7",
        "dotenv-cli": "^8.0.0",
        "events": "^3.1.0",
        "https-browserify": "^1.0.0",
        "os-browserify": "^0.3.0",
        "parcel": "^2.12.0",
        "path-browserify": "^1.0.0",
        "process": "^0.11.10",
        "stream-browserify": "^3.0.0",
        "stream-http": "^3.1.0",
        "tiny-secp256k1": "^2.2.3",
        "tweetnacl": "^1.0.3",
        "url": "^0.11.0",
        "util": "^0.12.3",
        "vm-browserify": "^1.1.2"
    },
    "scripts": {
        "test:full": "dotenv -- bash -c 'ava ./tests/full-flow.test.js --serial --timeout 30s'",
        "test:campaign": "dotenv -- bash -c 'ava ./tests/add-campaign.test.js --serial --timeout 30s'",
        "test:drop": "dotenv -- bash -c 'ava ./tests/add-drop.test.js --serial --timeout 30s'",
        "deploy": "dotenv -- bash -c 'ava ./tests/deploy.test.js --serial --timeout 30s'",
        "build": "parcel build src/index.html",
